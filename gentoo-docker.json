{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/netfs.sh",
        "scripts/docker.sh",
        "scripts/get_versions.sh"
      ],
      "execute_command": "sudo '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "/tmp/versions/",
      "destination": "./tmp",
      "direction": "download"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "execute_command": "sudo '{{ .Path }}'"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/scripts/provision_gentoo.sh<enter><wait>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort }} > /root/config_server_uri<enter>",
        "chmod +x provision_gentoo.sh && ./provision_gentoo.sh<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 32768,
      "http_directory": ".",
      "guest_os_type": "Gentoo_64",
      "headless": "true",
      "iso_url": "http://sd.ai/gentoo.php",
      "iso_checksum_type": "none",
      "communicator": "ssh",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "4h",
      "shutdown_command": "sudo systemctl poweroff",
      "vm_name": "gentoo-docker",
      "guest_additions_mode": "disable",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/scripts/provision_gentoo.sh<enter><wait>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort }} > /root/config_server_uri<enter>",
        "chmod +x provision_gentoo.sh && ./provision_gentoo.sh<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 32768,
      "http_directory": ".",
      "guest_os_type": "other3xlinux-64",
      "headless": "true",
      "iso_url": "http://sd.ai/gentoo.php",
      "iso_checksum_type": "none",
      "communicator": "ssh",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "4h",
      "shutdown_command": "sudo systemctl poweroff",
      "vm_name": "gentoo-docker",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
	      "memsize": "4096",
	      "numvcpus": "4"
      }
    },
    {
      "type": "hyperv-iso",
      "boot_command": [
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "<enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5><enter><wait5>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/scripts/provision_gentoo.sh<enter><wait>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort }} > /root/config_server_uri<enter>",
        "chmod +x provision_gentoo.sh && ./provision_gentoo.sh<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 32768,
      "http_directory": ".",
      "iso_url": "http://sd.ai/gentoo.php",
      "iso_checksum_type": "none",
      "communicator": "ssh",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "4h",
      "shutdown_command": "sudo systemctl poweroff",
      "vm_name": "gentoo-docker",
      "generation": 1,
      "ram_size": "4096",
      "enable_dynamic_memory": false,
      "cpu": 4
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "boxen/gentoo-docker-{{.Provider}}.box"
      }
    ]
  ]
}
